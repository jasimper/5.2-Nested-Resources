<header>
  <h1>Enter Song Info</h1>
</header>
<div>
  <%= form_for ([@album, @song]) do |f| %>
    <% if @song.errors.full_messages.present? %>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :duration %>
      <%= f.text_field :duration %>
    </div>
    <div>
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>
